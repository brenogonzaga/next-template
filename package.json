{
    "name": "prisma-next-app",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev --turbopack",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "prepare:db": "npx prisma generate",
        "init:db": "npx wrangler d1 execute next-template --file populate.sql",
        "build:worker": "npm run prepare:db && npx opennextjs-cloudflare build",
        "preview:worker": "npx opennextjs-cloudflare preview",
        "preview": "npm run build:worker && npm run preview:worker",
        "e2e": "playwright test -c e2e/playwright.config.ts",
        "e2e:dev": "playwright test -c e2e/playwright.dev.config.ts",
        "cf-typegen": "wrangler types --env-interface CloudflareEnv"
    },
    "dependencies": {
        "@auth/prisma-adapter": "^2.11.1",
        "@opennextjs/cloudflare": "^1.14.7",
        "@prisma/adapter-d1": "^7.2.0",
        "@prisma/client": "^7.2.0",
        "next": "15.5.9",
        "next-auth": "^5.0.0-beta.30",
        "react": "^19.2.3",
        "react-dom": "^19.2.3"
    },
    "devDependencies": {
        "@types/node": "25.0.3",
        "@types/react": "19.2.7",
        "@types/react-dom": "19.2.3",
        "eslint": "^9.39.2",
        "prisma": "^7.2.0",
        "typescript": "5.9.3",
        "wrangler": "4.54.0"
    }
}
